local displayedRods = {"Angler Rod","Astral Rod","Ares Rod","Steampunk Rod","Midnight Rod","Chrome Rod"}

for _, rodName in ipairs(displayedRods) do
    local data = rods[rodName]
    local btn = Instance.new("TextButton", rodPopup)
    btn.Size = UDim2.new(0.9,0,0,25)
    btn.AnchorPoint = Vector2.new(0.5,0)
    btn.Position = UDim2.new(0.5,0,0,0)
    btn.Text = rodName.." ("..data.price..")"
    btn.BackgroundColor3 = Color3.fromRGB(60,0,100)
    btn.TextColor3 = Color3.fromRGB(255,255,255)
    btn.Font = Enum.Font.Gotham
    btn.TextSize = 13
    Instance.new("UICorner", btn).CornerRadius = UDim.new(0,4)

    btn.MouseButton1Click:Connect(function()
        selectedRod = rodName
        rodDropdown.Text = rodName.." ("..data.price..")"
        rodPopup.Visible = false
        buyRodBtn.Visible = true
    end)
end

rodDropdown.MouseButton1Click:Connect(function()
    rodPopup.Visible = not rodPopup.Visible
    buyRodBtn.Visible = false
    if rodPopup.Visible then
        local count = #displayedRods
        rodPopup.CanvasSize = UDim2.new(0,0,0,count*27)
    end
end)

buyRodBtn.MouseButton1Click:Connect(function()
    local rodData = rods[selectedRod]
    if rodData then
        pcall(function()
            local rodRemote = net:WaitForChild("RF/PurchaseFishingRod")
            rodRemote:InvokeServer(rodData.id)
        end)
    end
end)

-- =========================
-- Bait Shop
-- =========================
local baits = {
    ["TopWater Bait"] = 10,
    ["Lucky Bait"] = 2,
    ["Midnight Bait"] = 3,
    ["Chroma Bait"] = 6,
    ["Dark Mater Bait"] = 8,
    ["Corrupt Bait"] = 15,
    ["Aether Bait"] = 16
}

local baitNames = {
    "TopWater Bait (100 Coins)",
    "Lucky Bait (1k Coins)",
    "Midnight Bait (3k Coins)",
    "Chroma Bait (290k Coins)",
    "Dark Mater Bait (630k Coins)",
    "Corrupt Bait (1.15M Coins)",
    "Aether Bait (3.7M Coins)"
}

local baitKeyMap = {
    ["TopWater Bait (100 Coins)"] = "TopWater Bait",
    ["Lucky Bait (1k Coins)"] = "Lucky Bait",
    ["Midnight Bait (3k Coins)"] = "Midnight Bait",
    ["Chroma Bait (290k Coins)"] = "Chroma Bait",
    ["Dark Mater Bait (630k Coins)"] = "Dark Mater Bait",
    ["Corrupt Bait (1.15M Coins)"] = "Corrupt Bait",
    ["Aether Bait (3.7M Coins)"] = "Aether Bait"
}

local selectedBait = baitNames[1]

local baitFrame = Instance.new("Frame", MiscTab)
baitFrame.Size = UDim2.new(1, -20, 0, 60)
baitFrame.Position = UDim2.new(0,10,0,rodRow.Position.Y.Offset + rodRow.Size.Y.Offset + 20)
baitFrame.BackgroundTransparency = 1

local baitDropdown = Instance.new("TextButton", baitFrame)
baitDropdown.Size = UDim2.new(0,175,0,30)
baitDropdown.Position = UDim2.new(0,0,0,0)
baitDropdown.Text = selectedBait
baitDropdown.BackgroundColor3 = Color3.fromRGB(40,0,80)
baitDropdown.TextColor3 = Color3.fromRGB(255,255,255)
baitDropdown.Font = Enum.Font.GothamBold
baitDropdown.TextSize = 14
Instance.new("UICorner", baitDropdown).CornerRadius = UDim.new(0,6)

local buyBaitBtn = Instance.new("TextButton", baitFrame)
buyBaitBtn.Size = UDim2.new(0,150,0,30)
buyBaitBtn.Position = UDim2.new(0, baitDropdown.Size.X.Offset + 10, 0, 0)
buyBaitBtn.Text = "ðŸ›’ Buy Selected Bait"
buyBaitBtn.BackgroundColor3 = Color3.fromRGB(80,0,120)
buyBaitBtn.TextColor3 = Color3.fromRGB(255,255,255)
buyBaitBtn.Font = Enum.Font.GothamBold
buyBaitBtn.TextSize = 14
Instance.new("UICorner", buyBaitBtn).CornerRadius = UDim.new(0,6)
buyBaitBtn.Visible = false

local baitPopup = Instance.new("ScrollingFrame", baitFrame)
baitPopup.Size = UDim2.new(0, 180, 0, 100)
baitPopup.Position = UDim2.new(0, baitDropdown.Position.X.Offset, 0, baitDropdown.Position.Y.Offset + baitDropdown.Size.Y.Offset + 5)
baitPopup.BackgroundColor3 = Color3.fromRGB(0,0,0)
baitPopup.BackgroundTransparency = 0.7
