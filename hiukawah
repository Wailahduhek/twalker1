baitPopup.ScrollBarThickness = 6
Instance.new("UICorner", baitPopup).CornerRadius = UDim.new(0,6)

local baitLayout = Instance.new("UIListLayout", baitPopup)
baitLayout.SortOrder = Enum.SortOrder.LayoutOrder
baitLayout.Padding = UDim.new(0,2)
baitLayout.HorizontalAlignment = Enum.HorizontalAlignment.Center

for _, baitName in ipairs(baitNames) do
    local btn = Instance.new("TextButton", baitPopup)
    btn.Size = UDim2.new(0.9,0,0,25)
    btn.AnchorPoint = Vector2.new(0.5,0)
    btn.Position = UDim2.new(0.5,0,0,0)
    btn.Text = baitName
    btn.BackgroundColor3 = Color3.fromRGB(60,0,100)
    btn.TextColor3 = Color3.fromRGB(255,255,255)
    btn.Font = Enum.Font.Gotham
    btn.TextSize = 13
    Instance.new("UICorner", btn).CornerRadius = UDim.new(0,4)

    btn.MouseButton1Click:Connect(function()
        selectedBait = baitName
        baitDropdown.Text = baitName
        baitPopup.Visible = false
        buyBaitBtn.Visible = true
    end)
end

baitDropdown.MouseButton1Click:Connect(function()
    baitPopup.Visible = not baitPopup.Visible
    buyBaitBtn.Visible = false
    if baitPopup.Visible then
        baitPopup.CanvasSize = UDim2.new(0,0,0,#baitNames*27)
    end
end)
local RFPurchaseBait = net:WaitForChild("RF/PurchaseBait")

buyBaitBtn.MouseButton1Click:Connect(function()
    local key = baitKeyMap[selectedBait]
    if key and baits[key] then
        local amount = baits[key]
        pcall(function()
            RFPurchaseBait:InvokeServer(amount)
        end)
    end
end)

-- =========================================================
-- MINIMIZE & CLOSE
-- =========================================================
local minimized = false

minimizeBtn.MouseButton1Click:Connect(function()
    minimized = not minimized

    if minimized then
        tabBar.Visible = false
        tabLineTop.Visible = false
        tabLineBottom.Visible = false
        
        for _, f in pairs(contents) do
            f.Visible = false
        end

        mainFrame.Size = UDim2.new(0, 200, 0, 40)
        mainFrame.Position = UDim2.new(0.5, -100, 0, 10)
    else
        tabBar.Visible = true
        tabLineTop.Visible = true
        tabLineBottom.Visible = true
        
        mainFrame.Size = UDim2.new(0, 360, 0, 240)
        mainFrame.Position = UDim2.new(0.5, -180, 0, 100)

        switchTab("AutoFish")
    end
end)

closeBtn.MouseButton1Click:Connect(function()
    gui:Destroy()
    autofish = false
end)
