--// CONTROL BUTTONS (Minimize dan Close)
local function createControlButton(symbol, offsetIndex, callback)
    local btn = Instance.new("TextButton", frame)
    btn.Size = UDim2.new(0, 32, 0, 28)
    btn.Position = UDim2.new(1, -34 * offsetIndex, 0, 12)
    btn.BackgroundTransparency = 1
    btn.BorderSizePixel = 0
    btn.Text = symbol
    btn.TextColor3 = Color3.fromRGB(220, 220, 220)
    btn.Font = Enum.Font.Gotham
    btn.TextSize = 12
    btn.AutoButtonColor = false
    btn.ZIndex = 10

    local hoverFrame = Instance.new("Frame", btn)
    hoverFrame.Size = UDim2.new(1, 0, 1, 0)
    hoverFrame.Position = UDim2.new(0, 0, 0, 0)
    hoverFrame.BackgroundColor3 = Color3.fromRGB(70, 70, 70)
    hoverFrame.BackgroundTransparency = 1
    hoverFrame.BorderSizePixel = 0
    hoverFrame.ZIndex = 5

    btn.MouseEnter:Connect(function()
        hoverFrame.BackgroundTransparency = 0.8
    end)

    btn.MouseLeave:Connect(function()
        hoverFrame.BackgroundTransparency = 1
    end)

    btn.MouseButton1Click:Connect(callback)

    return btn
end

-- Minimize: sembunyikan frame
createControlButton("‚Äî", 2, function()
    frame.Visible = false
end)

-- Close: hapus GUI
createControlButton("X", 1, function()
    gui:Destroy()
end)


local tabs = {}
local contentFrames = {}

local inactiveColor = Color3.fromRGB(40, 40, 50)  -- tab inaktif
local hoverColor    = Color3.fromRGB(55, 55, 70)  -- hover
local activeGradientColors = {
    ColorSequenceKeypoint.new(0, Color3.fromRGB(90, 90, 150)),  -- atas
    ColorSequenceKeypoint.new(1, Color3.fromRGB(70, 70, 110))   -- bawah
}

local function createTab(name, index, icon)

    -- Layout tab (sebaiknya dibuat sekali saja, pindahkan keluar fungsi kalau mau efisien)
    if not tabButtons:FindFirstChildOfClass("UIListLayout") then
        local tabListLayout = Instance.new("UIListLayout", tabButtons)
        tabListLayout.FillDirection = Enum.FillDirection.Vertical
        tabListLayout.Padding = UDim.new(0, 8)
        tabListLayout.SortOrder = Enum.SortOrder.LayoutOrder

        local padding = Instance.new("UIPadding", tabButtons)
        padding.PaddingTop = UDim.new(0, 20)
    end

    local button = Instance.new("TextButton", tabButtons)
    button.Size = UDim2.new(0, 120, 0, 38)
    button.AnchorPoint = Vector2.new(0, 0) -- anchor dari kiri atas
    button.Position = UDim2.new(0, 30, 0, (index - 1) * 46) -- geser ke kanan 30px, dan vertikal berurutan
    button.BackgroundColor3 = Color3.new(0,0,0)
    button.BackgroundTransparency = 1 -- transparan
    button.Text = (icon or "") .. "  " .. name
    button.Font = Enum.Font.GothamSemibold
    button.TextSize = 12
    button.TextColor3 = Color3.fromRGB(235, 235, 240)
    button.TextXAlignment = Enum.TextXAlignment.Center
    button.AutoButtonColor = false

    -- Hover animasi teks saja
    button.MouseEnter:Connect(function()
        if not contentFrames[name].Visible then
            button.TextColor3 = Color3.fromRGB(255, 255, 255)
        end
    end)
    button.MouseLeave:Connect(function()
        if not contentFrames[name].Visible then
            button.TextColor3 = Color3.fromRGB(235, 235, 240)
        end
    end)

    -- Konten tab
    local content = Instance.new("ScrollingFrame", contentContainer)
    content.Size = UDim2.new(1, 0, 1, 0)
    content.BackgroundTransparency = 1
    content.Visible = index == 1
    content.CanvasSize = UDim2.new(0, 0, 2, 0)
    content.ScrollBarThickness = 6

    local layout = Instance.new("UIListLayout", content)
    layout.Padding = UDim.new(0, 14)
    layout.SortOrder = Enum.SortOrder.LayoutOrder

    tabs[name] = button
    contentFrames[name] = content

    button.MouseButton1Click:Connect(function()
        for n, fr in pairs(contentFrames) do
            fr.Visible = false
            tabs[n].TextColor3 = Color3.fromRGB(235, 235, 240)
        end
        content.Visible = true
        button.TextColor3 = Color3.fromRGB(255, 255, 255)
    end)
end



-- Buat tab
createTab("AutoFish", 1)
createTab("Settings", 2)
createTab("Auto Sell", 3)
createTab("Auto Weather", 4)

local function createButton(parent, text, yOffset, callback)
    local wrapper = Instance.new("Frame", parent)
    wrapper.Size = UDim2.new(1, 0, 0, 32) -- tinggi lebih kecil
    wrapper.Position = UDim2.new(0, 0, yOffset, 0)
    wrapper.BackgroundTransparency = 1

    local btn = Instance.new("TextButton", wrapper)
    btn.Size = UDim2.new(0, 180, 0, 28) -- lebih kecil dan ramping
    btn.Position = UDim2.new(0, 0, 0, 0)
    btn.BackgroundColor3 = Color3.fromRGB(40, 40, 50)
    btn.Text = text
    btn.TextColor3 = Color3.fromRGB(235, 235, 235)
    btn.Font = Enum.Font.Gotham
    btn.TextSize = 12
    btn.AutoButtonColor = false

    local corner = Instance.new("UICorner", btn)
    corner.CornerRadius = UDim.new(0, 8) -- sedikit lebih kecil

    local stroke = Instance.new("UIStroke", btn)
    stroke.Color = Color3.fromRGB(90, 90, 100)
    stroke.Thickness = 1

    btn.MouseEnter:Connect(function()
        btn.BackgroundColor3 = Color3.fromRGB(55, 55, 65)
    end)
    btn.MouseLeave:Connect(function()
        btn.BackgroundColor3 = Color3.fromRGB(40, 40, 50)
    end)

    btn.MouseButton1Click:Connect(callback)
    return btn
end


