	Color3.fromRGB(128, 0, 255),
}
local colorIndex = 1

task.spawn(function()
	while true do
		local nextColor = colors[(colorIndex % #colors) + 1]
		local tween = TweenService:Create(showButton, TweenInfo.new(0.6), {TextColor3 = nextColor})
		tween:Play()
		tween.Completed:Wait()
		colorIndex += 1
	end
end)


