    end)
end)

-- Asumsi eventsFolder sudah didefinisikan:
local eventsFolder = game:GetService("ReplicatedStorage"):WaitForChild("Events")
local autoWeather = false
local weathers = {}

for _, eventModule in ipairs(eventsFolder:GetChildren()) do
    if eventModule:IsA("ModuleScript") then
        local success, eventData = pcall(require, eventModule)
        if success and eventData and type(eventData) == "table" then
            local weatherInfo = {
                Name = eventData.Name or eventModule.Name,
                Price = eventData.WeatherMachinePrice or 0,
                Desc = eventData.Description or "No description",
            }

            table.insert(weathers, weatherInfo)
        end
    end
end

-- Daftar weather yang diizinkan untuk dibeli
local allowedWeathers = {
    ["Snow"] = true,
    ["Storm"] = true,
    ["Wind"] = true,
}

-- Buat list khusus untuk auto weather (hanya yang allowed)
local autoWeatherWeathers = {}
for _, w in ipairs(weathers) do
    if allowedWeathers[w.Name] then
        table.insert(autoWeatherWeathers, w)
    end
end


-- Reference ke remote event
local net = game:GetService("ReplicatedStorage"):WaitForChild("Packages")
    :WaitForChild("_Index")
    :WaitForChild("sleitnick_net@0.2.0")
    :WaitForChild("net")
local weatherRemote = net:WaitForChild("RF/PurchaseWeatherEvent")

-- Tombol Toggle Auto Weather
createButton(contentFrames["Auto Weather"], "üîÑ Toggle Auto Weather", 0.1, function()
    autoWeather = not autoWeather
    autoWeatherLabel.Text = autoWeather and "Status: üü¢ On" or "Status: üî¥ Off"

    if autoWeather then
        task.spawn(function()
            local index = 1
            while autoWeather and #autoWeatherWeathers > 0 do
                local weatherName = autoWeatherWeathers[index].Name
                pcall(function()
                    weatherRemote:InvokeServer(weatherName)
                end)
                index = index + 1
                if index > #autoWeatherWeathers then
                    index = 1
                end
                task.wait(2) -- interval beli
            end
        end)
    end
end)

-- Buat tombol manual beli tiap weather yang di-allowed
local baseY = 0.6
local spacing = 0.2
for i, weatherInfo in ipairs(weathers) do
    if allowedWeathers[weatherInfo.Name] then
        local yPos = baseY + ((#contentFrames["Auto Weather"]:GetChildren()) - 1) * spacing
        createButton(contentFrames["Auto Weather"], "Buy " .. weatherInfo.Name, yPos, function()
            pcall(function()
                weatherRemote:InvokeServer(weatherInfo.Name)
            end)
        end)
    end
end

local autofish = false
local fishingTask = nil
local catchCount = 0 -- counter jumlah mancing

local ReplicatedStorage = game:GetService("ReplicatedStorage")
local net = ReplicatedStorage:WaitForChild("Packages")
    :WaitForChild("_Index")
    :WaitForChild("sleitnick_net@0.2.0")
    :WaitForChild("net")

local equipRemote = net:WaitForChild("RE/EquipToolFromHotbar")
local rodRemote = net:WaitForChild("RF/ChargeFishingRod")
local miniGameRemote = net:WaitForChild("RF/RequestFishingMinigameStarted")
local finishRemote = net:WaitForChild("RE/FishingCompleted")
local sellRemote = net:WaitForChild("RF/SellAllItems") -- remote untuk auto sell

-- Fungsi auto sell
local function autoSell()
    pcall(function()
        sellRemote:InvokeServer()
        print("‚úÖ Auto Sell triggered (2000+ catches)")
        catchCount = 0 -- reset counter setelah jual
    end)
end

-- Fungsi mulai auto fish
local function startFishing()
    if autofish then return end -- kalau sudah jalan, jangan mulai lagi
    autofish = true
    fishingTask = task.spawn(function()
        pcall(function()
            local args = {1}
            equipRemote:FireServer(unpack(args))
            task.wait(1)

            while autofish do
                pcall(function()
                    local timestamp = perfectCast and 9999999999 or (tick() + math.random())
                    rodRemote:InvokeServer(timestamp)
                    task.wait(0.1)

                    local x, y = -1.238, 0.969
                    if not perfectCast then
                        x = math.random(-1000, 1000) / 1000
                        y = math.random(0, 1000) / 1000
                    end

                    miniGameRemote:InvokeServer(x, y)
                    task.wait(1.3)
                    finishRemote:FireServer()

                    catchCount += 1
                    if catchCount >= 2000 then
                        autoSell()
                    end
                end)
                task.wait(1.4)
            end
        end)
    end)
end



local function stopFishing()
    autofish = false
    if fishingTask then
        task.cancel(fishingTask) 
        fishingTask = nil
        pcall(function()
            local args = {1}
            local equipRemote = net:WaitForChild("RE/EquipToolFromHotbar")
            equipRemote:FireServer(unpack(args))
            task.wait(0.1)
            local timestamp = perfectCast and 9999999999 or (tick() + math.random())
            rodRemote:InvokeServer(timestamp)
            task.wait(0.1)
            local x, y = -1.238, 0.969
            if not perfectCast then
                x = math.random(-1000, 1000) / 1000
                y = math.random(0, 1000) / 1000
            end
            miniGameRemote:InvokeServer(x, y)
            task.wait(1.3)
            finishRemote:FireServer()
        end)
        task.wait(1.4)
    end
end

-- Tombol start
createButton(contentFrames["AutoFish"], "‚úî Start Fishing", 0.2, function()
    autoFishStatusLabel.Text = "Status: ‚úî Running"
    startFishing()
end)

-- Tombol stop
createButton(contentFrames["AutoFish"], "‚úò Stop Fishing", 0.4, function()
    autoFishStatusLabel.Text = "Status: ‚úò Not Running"
    stopFishing()
end)


--// Teleport
local Players = game:GetService("Players")
local player = Players.LocalPlayer

local teleportLocations = {
    ["Fisherman Island"] = {
        {pos = Vector3.new(-100.0, 18.5, 2814.8), lookDir = Vector3.new(0, 0, -1)}, -- hadap N
        {pos = Vector3.new(-92.9, 18.5, 2814.4), lookDir = Vector3.new(0, 0, -1)},
        {pos = Vector3.new(-83.6, 18.5, 2814.4), lookDir = Vector3.new(0, 0, -1)},
        {pos = Vector3.new(-60.7, 3.5, 2748.4), lookDir = Vector3.new(0, 0, -1)},
        {pos = Vector3.new(-4.2, 2.6, 2775.0), lookDir = Vector3.new(0, 0, -1)},
    },
    ["Crater Island"] = {
        {pos = Vector3.new(987.6, 1.7, 5141.6), lookDir = Vector3.new(0, 0, -1)}, -- hadap N
        {pos = Vector3.new(1015.5, 1.7, 5147.2), lookDir = Vector3.new(0, 0, -1)},  -- hadap N
        {pos = Vector3.new(1008.6, 1.9, 5148.4), lookDir = Vector3.new(0, 0, -1)}, -- hadap N
        {pos = Vector3.new(997.9, 1.5, 5146.9), lookDir = Vector3.new(0, 0, -1)},   -- hadap N
    },
}

local baseY = 0
local spacing = 1.2

local i = 0
for name, positions in pairs(teleportLocations) do
    i += 1
    local posY = baseY + ((i - 1) * spacing)
    createButton(contentFrames["AutoFish"], "üìç " .. name, posY, function()
        local char = player.Character or workspace:FindFirstChild(player.Name)
        if char and char:FindFirstChild("HumanoidRootPart") then
            local hrp = char.HumanoidRootPart
            local randomData = positions[math.random(1, #positions)]
            local targetPos = randomData.pos + Vector3.new(0, 5, 0) -- naik sedikit
            local lookDirection = randomData.lookDir.Unit

            hrp.CFrame = CFrame.new(targetPos, targetPos + lookDirection)

            print("Teleported to", name, "at", targetPos)
        else
            warn("Character or HumanoidRootPart not found")
        end
    end)
end


