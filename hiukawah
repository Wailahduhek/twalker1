-- Tombol Buy
local buyBtn = Instance.new("TextButton", rodRow)
buyBtn.Size = UDim2.new(0,150,0,30)
buyBtn.Position = UDim2.new(0, rodDropdown.Size.X.Offset + 10, 0, 0)
buyBtn.Text = "ðŸ›’ Buy Selected Rod"
buyBtn.BackgroundColor3 = Color3.fromRGB(80,0,120)
buyBtn.TextColor3 = Color3.fromRGB(255,255,255)
buyBtn.Font = Enum.Font.GothamBold
buyBtn.TextSize = 14
Instance.new("UICorner", buyBtn).CornerRadius = UDim.new(0,6)
buyBtn.Visible = false
-- Popup dropdown mini (overlay)
local popupDropdown = Instance.new("Frame", MiscTab)
popupDropdown.Size = UDim2.new(0, 180, 0, 0) -- lebar fixed 180px, tinggi dinamis
popupDropdown.Position = UDim2.new(0, rodDropdown.Position.X.Offset, 0, rodDropdown.Position.Y.Offset + rodDropdown.Size.Y.Offset + 5)
popupDropdown.BackgroundColor3 = Color3.fromRGB(0,0,0)
popupDropdown.BackgroundTransparency = 0.7 -- gelap transparan
popupDropdown.Visible = false
Instance.new("UICorner", popupDropdown).CornerRadius = UDim.new(0,6)

-- Border hitam
local border = Instance.new("UIStroke", popupDropdown)
border.Thickness = 2
border.Color = Color3.fromRGB(30,30,30)

-- Layout tombol di tengah
local layout = Instance.new("UIListLayout", popupDropdown)
layout.SortOrder = Enum.SortOrder.LayoutOrder
layout.Padding = UDim.new(0,2)
layout.HorizontalAlignment = Enum.HorizontalAlignment.Center

-- Rods yang ingin ditampilkan
local displayedRods = {"Steampunk Rod","Astral Rod","Ares Rod","Angler Rod","Midnight Rod","Chrome Rod"}

-- Tambahkan tombol ke popup
for _, rodName in ipairs(displayedRods) do
    local data = rods[rodName]
    local btn = Instance.new("TextButton", popupDropdown)
    btn.Size = UDim2.new(0.9,0,0,25) -- 90% lebar frame popup
    btn.AnchorPoint = Vector2.new(0.5,0)
    btn.Position = UDim2.new(0.5,0,0,0)
    btn.Text = rodName.." ("..data.price..")"
    btn.BackgroundColor3 = Color3.fromRGB(60,0,100)
    btn.TextColor3 = Color3.fromRGB(255,255,255)
    btn.Font = Enum.Font.Gotham
    btn.TextSize = 13
    Instance.new("UICorner", btn).CornerRadius = UDim.new(0,4)

    btn.MouseButton1Click:Connect(function()
        selectedRod = rodName
        rodDropdown.Text = "ðŸŽ£ "..rodName.." ("..data.price..")"
        popupDropdown.Visible = false
        buyBtn.Visible = true
    end)
end

-- Toggle popup mini
rodDropdown.MouseButton1Click:Connect(function()
    popupDropdown.Visible = not popupDropdown.Visible
    buyBtn.Visible = false
    if popupDropdown.Visible then
        local count = #displayedRods
        popupDropdown.Size = UDim2.new(0, 180, 0, count*27)
    else
        popupDropdown.Size = UDim2.new(0,180,0,0)
    end
end)


-- Tombol Buy action
buyBtn.MouseButton1Click:Connect(function()
    local rodData = rods[selectedRod]
    if rodData then
        pcall(function()
            local rodRemote = net:WaitForChild("RF/PurchaseFishingRod")
            rodRemote:InvokeServer(rodData.id)
        end)
    end
end)

-- =========================================================
-- MINIMIZE & CLOSE
-- =========================================================
local minimized = false

minimizeBtn.MouseButton1Click:Connect(function()
    minimized = not minimized

    if minimized then
        tabBar.Visible = false
        tabLineTop.Visible = false
        tabLineBottom.Visible = false
        
        for _, f in pairs(contents) do
            f.Visible = false
        end

        mainFrame.Size = UDim2.new(0, 200, 0, 40)
        mainFrame.Position = UDim2.new(0.5, -100, 0, 10)
    else
        tabBar.Visible = true
        tabLineTop.Visible = true
        tabLineBottom.Visible = true
        
        mainFrame.Size = UDim2.new(0, 360, 0, 240)
        mainFrame.Position = UDim2.new(0.5, -180, 0, 100)

        switchTab("AutoFish")
    end
end)

closeBtn.MouseButton1Click:Connect(function()
    gui:Destroy()
    autofish = false
end)
